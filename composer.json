{
    "name": "application-server-management-protocol/php-client",
    "description": "PHP client library for ASMP",
    "homepage": "https://www.alainschlesser.com/asmp",
    "license": "MIT",
    "require": {
        "php": ">=5.5",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "~2.6",
        "friendsofphp/php-cs-fixer": "^2.14"
    },
    "autoload": {
        "psr-4": { "ASMP\\Client\\" : "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "ASMP\\Client\\" : "test/" }
    }
}
